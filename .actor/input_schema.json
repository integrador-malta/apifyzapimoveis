
{
  "title": "Configuração da coleta",
  "description": "Defina portal, bairros e filtros para coletar imóveis por região de Belo Horizonte.",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "portal": {
      "title": "Portal",
      "type": "string",
      "enum": ["zapimoveis", "vivareal"],
      "default": "vivareal"
    },
    "bairros": {
      "title": "Bairros",
      "type": "array",
      "items": { "type": "string" },
      "editor": "stringList",
      "default": ["Savassi", "Lourdes", "Funcionários"]
    },
    "tipoImovel": {
      "title": "Tipo de imóvel",
      "type": "string",
      "enum": ["apartamento", "casa", "studio", "kitnet", "terreno", "sala-comercial", "cobertura", "todos"],
      "default": "apartamento"
    },
    "negocio": {
      "title": "Negócio",
      "type": "string",
      "enum": ["venda", "aluguel"],
      "default": "venda"
    },
    "precoMin": {
      "title": "Preço mínimo",
      "type": "number",
      "editor": "number",
      "default": 0
    },
    "precoMax": {
      "title": "Preço máximo",
      "type": "number",
      "editor": "number",
      "default": 0
    },
    "quartosMin": {
      "title": "Quartos (mínimo)",
      "type": "number",
      "editor": "number",
      "default": 0
    },
    "banheirosMin": {
      "title": "Banheiros (mínimo)",
      "type": "number",
      "editor": "number",
      "default": 0
    },
    "usarProxy": {
      "title": "Usar proxy do Apify",
      "type": "boolean",
      "default": true
    },
    "maxPagesPorBairro": {
      "title": "Máximo de páginas por bairro",
      "type": "number",
      "editor": "number",
      "default": 10
    },
    "headless": {
      "title": "Browser headless",
      "type": "boolean",
      "default": true
    }
  },
  "required": ["portal", "bairros", "negocio"]
}
